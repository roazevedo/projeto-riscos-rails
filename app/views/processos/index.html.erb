<div style="height: 100vh; width: auto;">
  <div class="d-flex justify-content-between my-4">
    <h1>Processos</h1>
    <div class="d-flex align-items-center">
      <%= link_to new_processo_path,
        class: "d-flex justify-content-center align-items-center btn btn-outline-secondary border rounded-pill",
        style: "width: 200px; height: 40px;",
        data: { controller:"show-form", action: "click->show-form#showForm" },
        remote: true do %>
        <span>Adicionar Processo
          <i class="fa-solid fa-plus"></i>
        </span>
      <% end %>
    </div>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Órgão</th>
        <th scope="col">Setor Responsável</th>
        <th scope="col">Nome do Processo</th>
        <th scope="col">Gestor do Processo</th>
        <%#<th scope="col">Servidor Responsável</th>
        <th scope="col">Objetivo Estratégico</th>
        <th scope="col">Embasamento Legal</th>
        <th scope="col">Sistemas Utilizados</th>
        <th scope="col">Partes Interessadas</th>%>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @processos.each do |processo| %>
        <tr>
          <td><%= link_to processo.orgao, processo_path(processo), class: "text-dark text-decoration-none" %></td>
          <td><%= link_to processo.setor, processo_path(processo), class: "text-dark text-decoration-none" %></td>
          <td><%= link_to processo.nome, processo_path(processo), class: "text-dark text-decoration-none" %></td>
          <td><%= link_to processo.gestor_processo, processo_path(processo), class: "text-dark text-decoration-none" %></td>
          <%#<td><%= link_to processo.servidor_responsavel, processo_path(processo), class: "text-dark text-decoration-none" %><%#</td>
          <%#<td><%= link_to processo.objetivo_estrategico, processo_path(processo), class: "text-dark text-decoration-none" %><%#</td>
          <%#<td><%= link_to processo.embasamento_legal, processo_path(processo), class: "text-dark text-decoration-none" %><%#</td>
          <%#<td><%= link_to processo.sistemas_utilizados, processo_path(processo), class: "text-dark text-decoration-none" %><%#</td>
          <%#<td><%= link_to processo.partes_interessadas, processo_path(processo), class: "text-dark text-decoration-none" %><%#</td>%>
          <td data-controller="modal-processo">
            <%= link_to edit_processo_path(processo),
              data: { controller:"show-form", action: "click->show-form#showForm" },
              remote: true do %>
              <i class="fa-solid fa-pencil"></i>
            <% end %>
          </td>
          <td>
            <%= link_to processo_path(processo), data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir este processo?" } do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= turbo_frame_tag "bootstrap_modal" %>
