<div data-controller="relatorios">
  <h1>Gerar Relatório</h1>

  <%= simple_form_for :relatorio, url: gerar_relatorio_path, method: :get, html: { id: "relatorio-form" } do |f| %>
    <div class="mb-3">
      <%= f.input :orgao,
                  collection: @orgaos,
                  prompt: "Selecione um órgão",
                  label: "Órgão",
                  input_html: { class: "form-control", id: "orgao",data: { relatorios_target: "orgao", action: "change->relatorios#carregarSetores" } } %>
    </div>

    <div class="mb-3">
      <%= f.input :setor,
                  collection: [],
                  prompt: "Selecione um órgão primeiro",
                  label: "Setor",
                  input_html: { class: "form-control", disabled: true, id: "setor", data: { relatorios_target: "setor", action: "change->relatorios#carregarProcessos" } } %>
    </div>

    <div class="mb-3">
      <%= f.input :processo,
                  collection: [],
                  prompt: "Selecione um setor primeiro",
                  label: "Processo",
                  input_html: { class: "form-control", disabled: true, id: "processo", data: { relatorios_target: "processo" } } %>
    </div>

    <div class="mt-3">
      <%= f.button :submit, "Gerar Relatório", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
